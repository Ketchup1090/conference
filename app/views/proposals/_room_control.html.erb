<%
# SUMMARY: Displays a control for assigning a room to a proposal.
#
# Variables:
# * proposal: Proposal object to create a room selector for, required.
# * form: Form to include this selector in, optional.

form ||= nil
proposal ||= @proposal
args = proposal.event ? [:collection_select, :room_id, proposal.event.rooms, :id, :name, {:include_blank => '- None -'}] : nil
%>

<% if args %>
  <% if form %>
    <%= form.send(*args) %>
  <% else %>
    <% form_for proposal do |f| %>
      <%= f.send(*args) %>
    <% end %>
  <% end %>
<% end %>
