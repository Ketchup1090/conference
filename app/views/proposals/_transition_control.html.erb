<%
# Variables: 
# * proposal

proposal ||= @proposal
%>

<div class="transition_control">
  <% if proposal.aasm_events_for_current_state.empty? %>
    No valid transitions available from status <%= proposal.aasm_current_state %>
  <% else %>
    <%= select('proposal', 'transition',
        proposal.titles_and_statuses[1 .. proposal.titles_and_statuses.length],
        :include_blank => proposal.titles_and_statuses[0][0]) %>
  <% end %>
</div>
