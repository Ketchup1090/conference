<% focus :track_title %>

<% form_for(@track) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> (<%= link_to "Textile", "http://hobix.com/textile/" %>)<br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :color %><br />
    <%= f.text_field :color %> (E.g., "#000000" is black)
    <%# TODO add a jQuery color picker and swatch %>
  </p>
  <p>
    <%= f.submit @track.new_record? ? "Create" : "Update" %>
    <%= link_to 'Cancel', @track, :class => "showable" %> |
    <%= link_to 'Back', tracks_path, :class => "cancelable" %>
    <%= link_to 'Destroy', track_path(@track), :method => :delete, :confirm => %{Destroy track "#{@track.title}"?}, :class => "deletable" unless @track.new_record? %>
  </p>
<% end %>
